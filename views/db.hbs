<div class="overflow-x-auto mt-10">
    <table class="min-w-full text-sm text-gray-200 border-separate border-spacing-0">

        <thead class="bg-gray-800 text-gray-100 text-left">
        <tr>
            <th class="px-4 py-3 border-b border-gray-700">Név</th>
            <th class="px-4 py-3 border-b border-gray-700">Kategória</th>
            <th class="px-4 py-3 border-b border-gray-700">Érték (Ft)</th>
            <th class="px-4 py-3 border-b border-gray-700">Év</th>
        </tr>
        </thead>

        <tbody>
        {{#each animals}}
            <tr class="hover:bg-gray-800/40 transition">
                <td class="px-4 py-3 border-b border-gray-800">{{allat_nev}}</td>
                <td class="px-4 py-3 border-b border-gray-800">{{kategoria}}</td>
                <td class="px-4 py-3 border-b border-gray-800">{{ertek}} Ft</td>
                <td class="px-4 py-3 border-b border-gray-800">{{felfedezes_ev}}</td>
            </tr>
        {{/each}}
        </tbody>

    </table>
</div>