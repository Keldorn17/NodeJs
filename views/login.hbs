<div class="flex justify-center items-center min-h-[70vh]">
    <div class="bg-white/10 backdrop-blur-lg border border-white/20 p-8 rounded-xl shadow-xl w-full max-w-md">

        <h2 class="text-2xl font-semibold text-center mb-6">Bejelentkezés</h2>

        {{#if error}}
            <div class="bg-red-500/20 border border-red-500 text-red-300 px-4 py-3 rounded-lg mb-4 text-center">
                {{error}}
            </div>
        {{/if}}

        {{#if logout}}
            <div class="bg-green-500/20 border border-green-500 text-green-300 px-4 py-3 rounded-lg mb-4 text-center">
                Sikeresen kijelentkeztél!
            </div>
        {{/if}}

        <form method="POST" class="space-y-5">

            <div>
                <label class="block text-sm mb-1">Felhasználónév</label>
                <input name="username" value="{{form.username}}"
                       required
                       class="w-full p-2 rounded bg-gray-800/50 border border-white/20 focus:ring-2 focus:ring-indigo-400"/>
            </div>

            <div>
                <label class="block text-sm mb-1">Jelszó</label>
                <input name="password" type="password" required
                       class="w-full p-2 rounded bg-gray-800/50 border border-white/20 focus:ring-2 focus:ring-indigo-400"/>
            </div>

            <button class="w-full py-2 bg-indigo-600 hover:bg-indigo-700 transition rounded font-semibold">
                Bejelentkezés
            </button>

        </form>

        <p class="text-center text-sm text-gray-300 mt-4">
            Még nincs fiókod?
            <a href="/register" class="text-indigo-300 hover:text-indigo-400">Regisztráció</a>
        </p>

    </div>
</div>
