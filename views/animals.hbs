<div class="flex justify-center mt-10">
    <div class="w-full max-w-5xl
                bg-white/10 backdrop-blur-lg
                border border-white/20
                rounded-xl shadow-xl p-6">

        <h2 class="text-2xl font-semibold mb-6 text-center">
            Védett Fajok Adatbázisa
        </h2>

        <div class="overflow-x-auto">

            <table class="min-w-full text-sm text-gray-200 border-separate border-spacing-0">

                <thead>
                <tr class="bg-white/10 border-b border-white/20">
                    <th class="px-4 py-3 text-left font-medium">Név</th>
                    <th class="px-4 py-3 text-left font-medium">Kategória</th>
                    <th class="px-4 py-3 text-left font-medium">Érték (Ft)</th>
                    <th class="px-4 py-3 text-left font-medium">Felfedezés Éve</th>
                </tr>
                </thead>

                <tbody class="divide-y divide-white/10">

                {{#each animals}}
                    <tr class="hover:bg-white/5 transition">
                        <td class="px-4 py-3">{{allat_nev}}</td>
                        <td class="px-4 py-3">{{kategoria}}</td>
                        <td class="px-4 py-3">{{ertek}} Ft</td>
                        <td class="px-4 py-3">{{felfedezes_ev}}</td>
                    </tr>
                {{/each}}

                </tbody>

            </table>

        </div>

    </div>
</div>
