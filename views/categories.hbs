<div class="container mx-auto px-4 md:px-6 py-10 flex justify-center">
    <div class="w-full max-w-4xl transition-colors duration-300">

        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
                Kategóriák kezelése
            </h2>

            <a href="{{basePath}}/admin/create"
               class="w-full sm:w-auto flex justify-center items-center gap-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold px-4 py-2.5 rounded-lg shadow-md shadow-indigo-500/20 transition">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Új kategória
            </a>
        </div>

        <div class="grid grid-cols-1 gap-4 md:hidden">
            {{#each categories}}
                <div class="bg-white dark:bg-gray-800 p-5 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 flex flex-col gap-4">

                    <div class="text-lg font-bold text-gray-900 dark:text-white border-b border-gray-100 dark:border-gray-700">
                        {{nev}}
                    </div>

                    <div class="flex gap-3 mt-1">

                        <a href="{{@root.basePath}}/admin/edit/{{id}}"
                           class="flex-1 inline-flex justify-center items-center gap-2 px-3 py-2.5 rounded-lg text-sm font-medium transition
                                  bg-indigo-50 text-indigo-700 hover:bg-indigo-100
                                  dark:bg-indigo-900/30 dark:text-indigo-300 dark:hover:bg-indigo-900/50">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            Szerkesztés
                        </a>

                        <form method="GET" action="{{@root.basePath}}/admin/delete/{{id}}"
                              onsubmit="return confirm('Biztosan törölni szeretnéd a(z) &quot;{{nev}}&quot; kategóriát? Ez a művelet nem vonható vissza!');"
                              class="flex-1">
                            <button type="submit"
                                    class="w-full inline-flex justify-center items-center gap-2 px-3 py-2.5 rounded-lg text-sm font-medium transition
                                           bg-red-50 text-red-700 hover:bg-red-100
                                           dark:bg-red-900/30 dark:text-red-300 dark:hover:bg-red-900/50">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                                Törlés
                            </button>
                        </form>
                    </div>

                </div>
            {{/each}}
        </div>

        <div class="hidden md:block overflow-hidden rounded-lg border border-gray-200 dark:border-gray-700 shadow-sm">
            <table class="w-full text-left text-sm border-collapse">

                <thead class="bg-gray-50 dark:bg-gray-700/50 text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wider font-semibold">
                <tr>
                    <th class="px-6 py-4">Név</th>
                    <th class="px-6 py-4 text-right">Műveletek</th>
                </tr>
                </thead>

                <tbody class="divide-y divide-gray-200 dark:divide-gray-700 bg-white dark:bg-gray-800">
                {{#each categories}}
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition duration-150">

                        <td class="px-6 py-4 text-gray-900 dark:text-gray-200 font-medium">
                            {{nev}}
                        </td>

                        <td class="px-6 py-4">
                            <div class="flex justify-end items-center gap-3">

                                <a href="{{@root.basePath}}/admin/edit/{{id}}"
                                   class="inline-flex items-center gap-1 px-3 py-1.5 rounded-md text-sm font-medium transition
                                          bg-indigo-50 text-indigo-700 hover:bg-indigo-100
                                          dark:bg-indigo-900/30 dark:text-indigo-300 dark:hover:bg-indigo-900/50">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                    Szerkesztés
                                </a>

                                <form method="GET" action="{{@root.basePath}}/admin/delete/{{id}}"
                                      onsubmit="return confirm('Biztosan törölni szeretnéd a(z) &quot;{{nev}}&quot; kategóriát? Ez a művelet nem vonható vissza!');"
                                      class="inline-block">
                                    <button type="submit"
                                            class="inline-flex items-center gap-1 px-3 py-1.5 rounded-md text-sm font-medium transition
                                                   bg-red-50 text-red-700 hover:bg-red-100
                                                   dark:bg-red-900/30 dark:text-red-300 dark:hover:bg-red-900/50">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                  d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                        Törlés
                                    </button>
                                </form>

                            </div>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>

        {{#unless categories}}
            <div class="text-center py-12 border border-dashed border-gray-300 dark:border-gray-700 rounded-xl mt-4">
                <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-gray-100 dark:bg-gray-800 text-gray-400 mb-3">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                    </svg>
                </div>
                <p class="text-gray-500 dark:text-gray-400">Még nincsenek kategóriák létrehozva.</p>
            </div>
        {{/unless}}

    </div>
</div>